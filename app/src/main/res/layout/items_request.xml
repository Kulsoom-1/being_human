<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder">

    <RelativeLayout
        android:id="@+id/parentRequester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvRequesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="Zuanira Jamil"
            android:textColor="@color/colorThemeBackground"
            android:textSize="15dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvRequesterGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvRequesterName"
            android:layout_alignBottom="@+id/tvRequesterName"
            android:layout_centerHorizontal="true"
            android:text="Male"
            android:textColor="@color/colorThemeBackground"
            android:textSize="15dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvRequesterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvRequesterGender"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="090078601"
            android:textColor="@color/colorThemeBackground"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/parentRequester">


