<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <include
        android:id="@+id/signupheader"
        layout="@layout/header"
        />
<RelativeLayout
    android:layout_below="@+id/signupheader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parentSignup"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ce0610">

        <android.support.v4.widget.CircleImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/mypic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Kulsoom Irshad"
            android:layout_marginBottom="12dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_below="@+id/parentSignup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layoutSignupMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/textSignup"
            android:text="Sign Up Form"
            android:textColor="#ce0610"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSignup"
            android:gravity="center"
            android:text="fill out the following fields"
            android:textColor="#ce0610"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/layoutSignupMessage"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ParentFields">
            <EditText
                android:id="@+id/editBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Blood Group"
                android:textColorHint="#ce0610"
                android:textColor="#ce0610"
                />

        <EditText
            android:layout_below="@+id/editBloodGroup"
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:textColorHint="#ce0610"
            android:textColor="#ce0610"
            android:inputType="textPersonName"
            android:hint="Name" />

            <EditText
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editName"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:textColorHint="#ce0610"
                android:textColor="#ce0610"
                android:hint="Age"
                android:inputType="number" />

            <EditText
                android:id="@+id/editCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editAge"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:textColorHint="#ce0610"
                android:textColor="#ce0610"
                android:hint="City"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/editDonation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editCity"
                android:layout_marginTop="13dp"
                android:textColorHint="#ce0610"
                android:textColor="#ce0610"
                android:ems="10"
                android:hint="Last Doantion"
                android:inputType="date" />
            <EditText
                android:id="@+id/editPhone"
                android:layout_below="@+id/editDonation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:textColorHint="#ce0610"
                android:textColor="#ce0610"
                android:layout_marginTop="13dp"
                android:hint="Phone Number"
                />

        </RelativeLayout>
        <Button
            android:textSize="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_below="@+id/ParentFields"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:id="@+id/btn_on_sign_up1"
            android:layout_width="170dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/buttons"
            android:text="Sign Up"
            />

    </RelativeLayout>
</RelativeLayout>


</RelativeLayout>
</ScrollView>