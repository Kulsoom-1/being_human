<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blod"
    tools:context="com.example.admin.being_human.DonarProfileFragment">
<RelativeLayout
    android:id="@+id/parentDonarProfile"
    android:layout_width="match_parent"
    android:background="@color/colorOverly"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorOverly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/donarProfile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ce0610"
            android:gravity="center"
            android:text="Details of Volunteer Donars"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/parentDonarProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/parentDonarName"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOverly">
        <TextView
            android:id="@+id/tvDonarNameHeading"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tvDonarName"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tvDonarNameHeading"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kulsoom Irshad"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/parentDonarBloodGroup"
        android:layout_below="@+id/parentDonarName"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOverly">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:id="@+id/tvDonarBloodGroup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Blood Group: "
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/bloodGroup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tvDonarBloodGroup"
            android:gravity="center"
            android:text="AB-"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/parentDonarNumber"
        android:layout_below="@+id/parentDonarBloodGroup"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOverly">
        <TextView
            android:id="@+id/tvDonarPhoneNumber"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phone Number :"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/phoneNo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tvDonarPhoneNumber"
            android:gravity="center"
            android:text="09000876736176"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/parentDonarAddress"
        android:layout_below="@+id/parentDonarNumber"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOverly">
        <TextView
            android:id="@+id/tvDonarAddress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="City:  "
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cityName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tvDonarAddress"
            android:gravity="center"
            android:text="Lahore"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/parentDonarGender"
            android:padding="20dp"
            android:layout_below="@id/parentDonarAddress"
            android:background="@color/colorOverly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDonarGender"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Gender:  "
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/genderDoner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tvDonarGender"
                android:gravity="center"
                android:text="Female"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/parentDonarGender"
            android:background="@color/colorOverly"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_on_profile"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginpass"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/buttons"
                android:text="Request"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
